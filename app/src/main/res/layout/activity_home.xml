<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:ads="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/DivinityMain"
android:clickable="false"
tools:context="com.digzdigital.divinitytoday.activity.HomeActivity">


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <ImageView
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:id="@+id/imageView1"
        android:src="@mipmap/divinity_launcher_7"
        android:layout_marginTop="89dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:id="@+id/textView1"
        android:textSize="15sp"
        android:alpha="0.87"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textStyle="normal|bold" />


    <Button
        android:id="@+id/saveFile"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/save"
        android:layout_marginTop="1dp"
        android:background="@drawable/button_back_custom"
        android:layout_alignParentBottom="true"
        android:textColor="#1565C0" />
    <Button
        android:id="@+id/reader"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="2dp"
        android:text="@string/reader"
        android:background="@drawable/button_back_custom"
        android:textColor="#1565C0"
        android:layout_above="@id/saveFile"/>




</RelativeLayout>