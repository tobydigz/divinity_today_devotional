<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/swipeContainer">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/DivinityMain">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/devotionalsListdb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:columnWidth="80dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:listSelector="@drawable/list_selector"
        android:divider="@color/custom_theme_color"
        android:dividerHeight="1dp"
        >
    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:src="@mipmap/divinity_launcher_7"
        android:layout_centerInParent="true"
        android:id="@+id/dropLogo"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dropLogo"
        android:text="OOPS!  \n NO SAVED DEVOTIONALS YET"
        android:gravity="center"
        android:textSize="40sp"
        android:id="@+id/dbErrorHandle"
        android:textColor="#83ffffff"
        android:visibility="gone"
        />
</RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>